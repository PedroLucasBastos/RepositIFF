generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AcademicWork {
  id                 String                 @id
  createdAt          DateTime               @default(now())
  title              String
  typeWork           String
  year               Int
  qtdPag             Int
  description        String
  courseId           String
  keyWords           String[]
  academicWorkStatus String
  course             Course                 @relation(fields: [courseId], references: [id])
  ilustration        String
  references         Int[]
  cutterNumber       String?
  cduCode            String?
  cddCode            String?
  file               String?                @unique
  authors            String[]
  advisors           Advisor_AcademicWork[]
}

