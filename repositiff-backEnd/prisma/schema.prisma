generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AcademicWork {
  id                 String                 @id
  createdAt          DateTime               @default(now())
  title              String
  typeWork           String
  year               Int
  qtdPag             Int
  description        String
  course             String
  keyWords           String[]
  academicWorkStatus String
  cutterNumber       String?
  cduCode            String?
  cddCode            String?
  url                String?
  authors            Author[]               @relation("AcademicWorkToAuthor")
  advisors           Advisor_AcademicWork[]
}

model Author {
  id           String         @id @default(cuid())
  name         String
  sobrenome    String
  AcademicWork AcademicWork[] @relation("AcademicWorkToAuthor")
}

model Advisor {
  id                   String                 @id
  name                 String
  surname              String
  registrationNumber   String                 @unique
  Advisor_AcademicWork Advisor_AcademicWork[]
}

model Advisor_AcademicWork {
  id             String       @id @unique @default(cuid())
  advisorId      String
  academicWorkId String
  AcademicWork   AcademicWork @relation(fields: [academicWorkId], references: [id])
  Advisor        Advisor      @relation(fields: [advisorId], references: [id])
}

model Librarian {
  id                 String @id
  name               String
  email              String @unique
  registrationNumber String @unique
  pass               String
}
